      (semui/extelem kids)))

(defelem circular-segment [attr kids]
    (-> attr
      (assoc :extends segment :post-class {:circular true})
      (semui/extelem kids)))

(defelem raised-segment [attr kids]
    (-> attr
      (assoc :extends segment :post-class {:raised true})
      (semui/extelem kids)))

(defelem compact-segment [attr kids]
    (-> attr
