      (semui/extelem kids)))

(defelem piled-segment [attr kids]
    (-> attr
      (assoc :extends segment :post-class {:piled true})
      (semui/extelem kids)))

(defelem vertical-segment [attr kids]
    (-> attr
      (assoc :extends segment :post-class {:vertical true})
      (semui/extelem kids)))

(defelem basic-segment [attr kids]
